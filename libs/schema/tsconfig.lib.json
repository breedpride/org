{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": ["node"],
    "composite": true
  },
  "exclude": [
    "**/*.spec.ts",
    "test-setup.ts",
    "jest.config.ts",
    "**/*.test.ts",
    "vite.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "include": ["**/**/*.ts"]
}
